" Margin="-1,1,1,49" Grid.RowSpan="2" Grid.Row="1"/>
        <Button Content="OK" Width="80" Height="30" Margin="90,10,0,10" Click="Ok_Click" HorizontalAlignment="Left" Grid.Row="2" Padding="5" Grid.Column="1"/>
        <TextBlock Text="    Version:1.2b   BY:Hidin_in_basement.bt" Grid.Column="0" Grid.Row="2" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="245"/>
