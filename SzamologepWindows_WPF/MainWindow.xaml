<Window x:Class="SzamologepWindows_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Számológép" Height="500" Width="350"
        Icon="/Windows_Calculator.ico"
        Background="#454647"
        MinHeight="400" MinWidth="300"
        WindowStartupLocation="CenterScreen" FontSize="20" FontWeight="DemiBold">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Border Grid.ColumnSpan="4" Grid.Row="0" Grid.Column="0"
                BorderBrush="#545556" BorderThickness="2"
                CornerRadius="5" Background="White" Margin="0,0,0,10">

            <TextBox x:Name="tb_szamolo" IsReadOnly="True" FontSize="25" HorizontalAlignment="Stretch" Margin="10"/>
        </Border>

        <!--1.sor-->
        <Button x:Name="btn_1" Grid.Row="1" Grid.Column="0" Content="1" Click="Gomb_Click"/>
        <Button x:Name="btn_2" Grid.Row="1" Grid.Column="1" Content="2" Click="Gomb_Click"/>
        <Button x:Name="btn_3" Grid.Row="1" Grid.Column="2" Content="3" Click="Gomb_Click"/>
        <Button x:Name="btn_Osszeadas" Grid.Row="1" Grid.Column="4" Content="+" Click="Gomb_Click"/>

        <!--2.sor-->
        <Button x:Name="btn_4" Grid.Row="2" Grid.Column="0" Content="4" Click="Gomb_Click"/>
        <Button x:Name="btn_5" Grid.Row="2" Grid.Column="1" Content="5" Click="Gomb_Click"/>
        <Button x:Name="btn_6" Grid.Row="2" Grid.Column="2" Content="6" Click="Gomb_Click"/>
        <Button x:Name="btn_Kivonas" Grid.Row="2" Grid.Column="4" Content="-" Click="Gomb_Click"/>

        <!--3.sor-->
        <Button x:Name="btn_7" Grid.Row="3" Grid.Column="0" Content="7" Click="Gomb_Click"/>
        <Button x:Name="btn_8" Grid.Row="3" Grid.Column="1" Content="8" Click="Gomb_Click"/>
        <Button x:Name="btn_9" Grid.Row="3" Grid.Column="2" Content="9" Click="Gomb_Click"/>
        <Button x:Name="btn_Szorzas" Grid.Row="3" Grid.Column="4" Content="*" Click="Gomb_Click"/>
        
        <!--4.sor-->
        <Button x:Name="btn_Clear" Grid.Row="4" Grid.Column="0" Content="Clear" Click="Btn_Clear_Click"/>
        <Button x:Name="btn_0" Grid.Row="4" Grid.Column="1" Content="0" Click="Gomb_Click"/>
        <Button x:Name="btn_Egyenloseg" Grid.Row="4" Grid.Column="3" Content="=" Grid.RowSpan="2" Click="Btn_Egyenloseg_Click"/>

        <!--5.sor-->
        <Button x:Name="btn_Osztas" Grid.Row="5" Grid.Column="0" Content="/" Click="Gomb_Click"/>
        <Button x:Name="btn_Hatvanyzoz" Grid.Row="4" Grid.Column="2" Content="^" Click="Gomb_Click"/>
        <Button x:Name="btn_Faktorialis" Grid.Row="5" Grid.Column="2" Content="n!" Click="Gomb_Click"/>
        <Button x:Name="btn_Gyokkivon" Grid.Row="5" Grid.Column="1" Content="√" Click="Gomb_Click"/>
    </Grid>
</Window>
